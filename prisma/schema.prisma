generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models

model auth {
  id       String @id @default(uuid())
  email    String @unique
  password String
  users    User?
}

model User {
  profileId String    @id @default(uuid())
  firstName String
  lastName  String
  phone     Int?
  user      auth      @relation(fields: [userId], references: [id])
  userId    String    @unique
  routes    Route[]
  pricing   Pricing[]
}

model Route {
  routeId    Int      @id @default(autoincrement())
  date       DateTime @default(now()) @db.Date
  containers Int      @default(0)
  hours      Int      @default(0)
  miles      Int      @default(0)
  scans      Int      @default(0)
  stops      Int      @default(0)
  business   Pricing  @relation(fields: [businessId], references: [companyId])
  businessId String
  driver     User     @relation(fields: [driverId], references: [userId])
  driverId   String
}

model Pricing {
  companyId  String  @id @default(uuid())
  name       String
  containers Int     @default(0)
  hours      Int     @default(0)
  miles      Int     @default(0)
  scans      Int     @default(0)
  stops      Int     @default(0)
  routes     Route[]
  creator    User    @relation(fields: [creatorId], references: [userId])
  creatorId  String
}
